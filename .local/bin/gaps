#!/usr/bin/env sh

WINDOW_GAP="0"
PADDING="0"

if [ "$1" == "off" ]; then
    WINDOW_GAP=4
    PADDING=4
elif [ "$1" == "small" ]; then
    WINDOW_GAP=16
    PADDING=24
elif [ "$1" == "large" ]; then
    WINDOW_GAP=24
    PADDING=48
elif [ "$1" == "zen" ]; then
    WINDOW_GAP=32
    PADDING=128
else
    WINDOW_GAP=$1
    PADDING=$1
    if [ ! -z $2 ]; then 
        PADDING=$2; 
    fi
fi

yabai -m config window_gap     $WINDOW_GAP
yabai -m config top_padding    $PADDING
yabai -m config bottom_padding $PADDING
yabai -m config left_padding   $PADDING
yabai -m config right_padding  $PADDING
