#!/usr/bin/env sh

GAP="0"
PL="0"
PT="0"
PR="0"
PB="0"

SPACE="global"

if [ "$2" == "current" ]; then
    SPACE="current"
fi

if [ "$1" == "off" ]; then
    GAP=3
    PL=58
    PT=3
    PR=3
    PB=3
elif [ "$1" == "small" ]; then
    GAP=28
    PL=80
    PT=12
    PR=12
    PB=12
elif [ "$1" == "medium" ]; then
    GAP=32
    PL=76
    PT=24
    PR=24
    PB=24
elif [ "$1" == "large" ]; then
    GAP=32
    PL=116
    PT=64
    PR=64
    PB=64
elif [ "$1" == "zen" ]; then
    GAP=32
    PL=180
    PT=128
    PR=128
    PB=128
else
    WINDOW_GAP=$1
    PADDING=$1
    if [ ! -z $2 ]; then 
        PADDING=$2; 
    fi
    yabai -m config left_padding $PADDING
fi

if [ "$SPACE" == "current" ]; then
    yabai -m space --gap abs:$GAP
    yabai -m space --padding abs:$PT:$PB:$PL:$PR
else
    yabai -m config window_gap     $GAP
    yabai -m config left_padding   $PL
    yabai -m config top_padding    $PT
    yabai -m config right_padding  $PR
    yabai -m config bottom_padding $PB
fi
